<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.animals.CatChallengeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="13dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageViewBack"
                android:layout_margin="10dp"
                android:layout_width="25dp"
                android:src="@drawable/ic_back_arrow_black"
                android:layout_height="25dp"/>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Gato"
                android:textStyle="bold"
                android:textColor="@color/primarystatusbar"
                android:textSize="20dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                app:contentPadding="10dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="10dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/challenge_main_photo"
                        android:layout_width="190dp"
                        android:layout_height="120dp"
                        app:riv_corner_radius="10dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_image_gray_backgraound"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Partes del gato"
                android:textColor="@color/primarystatusbar"
                android:textSize="20dp" />

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">


                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        app:contentPadding="10dp"
                        android:layout_marginStart="10dp"
                        app:cardBackgroundColor="@color/greeDark"
                        android:layout_marginTop="10dp"
                        app:cardCornerRadius="5dp"
                        android:layout_height="wrap_content">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="wrap_content"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                app:contentPadding="10dp"
                                app:cardCornerRadius="5dp"
                                app:cardElevation="5dp"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:orientation="vertical"
                                    android:layout_height="wrap_content">

                                    <com.google.android.material.textview.MaterialTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:textColor="@color/greeDark"
                                        android:text="Almohadillas"
                                        android:textSize="20dp"/>

                                    <com.makeramen.roundedimageview.RoundedImageView
                                        android:id="@+id/challenge_roundedImageView_subitem"
                                        android:layout_width="190dp"
                                        android:layout_height="120dp"
                                        app:riv_corner_radius="10dp"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="10dp"
                                        android:src="@drawable/ic_image_gray_backgraound"/>

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                            <LinearLayout
                                android:layout_marginTop="10dp"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <de.hdodenhof.circleimageview.CircleImageView
                                        android:id="@+id/circleImageViewPhoto"
                                        android:src="@drawable/ic_image_gray_backgraound"
                                        app:civ_circle_background_color="#EAEAEA"
                                        app:civ_border_width="40dp"
                                        app:civ_border_color="#EAEAEA"
                                        android:layout_width="match_parent"
                                        android:layout_height="150dp"
                                        android:paddingTop="5dp"
                                        android:layout_gravity="center"
                                        android:layout_weight="1"
                                        android:layout_marginBottom="10dp"/>

                                    <com.google.android.material.textview.MaterialTextView
                                        android:id="@+id/textViewImagenNosubida"
                                        android:layout_width="wrap_content"
                                        android:text="Imagen no subida"
                                        android:textColor="#999"
                                        android:textStyle="bold"
                                        android:layout_gravity="center"
                                        android:layout_height="wrap_content"/>

                                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                                        android:id="@+id/fabSelectImage"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/ic_photo"
                                        android:backgroundTint="@color/greenPrimary"
                                        android:layout_gravity="bottom|center"
                                        android:layout_marginLeft="50dp"
                                        app:elevation="0dp"/>

                                </FrameLayout>

                                <Button
                                    android:id="@+id/btnregistrar"
                                    android:layout_width="200dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="10dp"
                                    android:layout_marginTop="15dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/buttom_registrarmuestra"
                                    android:text="GUARDAR IMAGEN"
                                    android:textColor="@color/white"/>

                            </LinearLayout>

                        </androidx.appcompat.widget.LinearLayoutCompat>


                    </androidx.cardview.widget.CardView>


                </LinearLayout>


            </HorizontalScrollView>




        </LinearLayout>

    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>