<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    app:cardCornerRadius="5dp"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/MMtxtauthor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="#000"
                android:hint="Author"
                android:text="AUTHOR"
                style="@style/letra_editText"
                android:textSize="15sp"></TextView>

            <TextView
                android:id="@+id/MMtxtTiempo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical|center_horizontal"
                android:text="FECHA"
                android:textColor="#858484"
                android:gravity="center"
                style="@style/letra_editText"
                android:layout_marginStart="8dp"
                android:textSize="15sp"></TextView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >



            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:id="@+id/MMivImagen"
                android:src="@drawable/ic_menu_gallery"
                ></de.hdodenhof.circleimageview.CircleImageView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:layout_weight="2"
                        style="@style/letra_editText"
                        android:text="Departamento"
                        android:textSize="15sp"></TextView>

                    <TextView
                        android:id="@+id/MMtxtDepartamento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/letra_editText"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:textColorHint="#000"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:hint="Departamento"
                        android:textSize="15sp"></TextView>

                    <View
                        android:layout_width="match_parent"
                        android:background="#B6B5B5"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_height="1dp"></View>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Provincia"
                        android:gravity="start"
                        style="@style/letra_editText"
                        android:textSize="15sp"></TextView>

                    <TextView
                        android:id="@+id/MMtxtProvincia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:hint="Provincia"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:textColorHint="#000"
                        style="@style/letra_editText"
                        android:textSize="15sp"></TextView>

                    <View
                        android:layout_width="match_parent"
                        android:background="#B6B5B5"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_height="1dp"></View>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:layout_weight="2"
                        style="@style/letra_editText"
                        android:text="Resultado"
                        android:textSize="15sp"></TextView>

                    <TextView
                        android:id="@+id/MMtxtResultado"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_weight="1"
                        style="@style/letra_editText"
                        android:hint="Positivo"
                        android:textStyle="bold"
                        android:textColorHint="#000"
                        android:textColor="#000"
                        android:textSize="15sp"></TextView>


                </LinearLayout>



            </LinearLayout>



        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button_nocolor"
            android:backgroundTint="#7AE3CA"
            android:layout_marginTop="10dp">


            <Button
                android:id="@+id/google_button"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:text="VER EN GOOGLE MAPS"
                android:textColor="@color/white" />

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="20dp"
                android:layout_gravity="center_vertical|start"
                android:layout_marginLeft="20dp"
                android:layout_height="20dp"
                android:src="@drawable/mapas_de_google"/>


        </FrameLayout>


    </LinearLayout>



</androidx.cardview.widget.CardView>


